{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "index.ts",
    "client.ts",
    "server.ts",
    "spi_client.ts",
    "spi_server.ts",
    "classes/**/*",
    "shared/**/*",
    "utils/**/*"
  ],
  "exclude": ["node_modules", "dist", "examples", "**/*.test.ts"]
}
