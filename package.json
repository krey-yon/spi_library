{
  "name": "@kreyon/spi_library",
  "version": "0.1.0",
  "description": "Solana Payment Integration library with loyalty rewards, memberships, and dynamic NFT generation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/spi_client.js",
      "types": "./dist/spi_client.d.ts"
    },
    "./server": {
      "import": "./dist/spi_server.js",
      "types": "./dist/spi_server.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "solana",
    "solana-pay",
    "payment",
    "loyalty",
    "rewards",
    "nft",
    "web3",
    "blockchain",
    "anchor"
  ],
  "author": "Vikas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/krey-yon/spi_library"
  },
  "bugs": {
    "url": "https://github.com/krey-yon/spi_library"
  },
  "homepage": "https://spi.kreyon.in",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5",
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/pay": "^0.2.6",
    "@solana/web3.js": "^1.98.4",
    "sharp": "0.32.6"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/pay": "^0.2.6",
    "@solana/web3.js": "^1.98.4",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.6.0",
    "sharp": "0.32.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
